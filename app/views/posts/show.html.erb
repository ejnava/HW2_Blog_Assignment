<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<p>
  <b>Author:</b>
  <%= @post.author %>
</p>

<h2>Comments</h2>
<div id="comments">
  <%= @post.comments.each do |comment| %>
    <%= div_for comment do %>
    <p>
      <strong>
        posted <%= time_ago_in_words(comment.created_at) %>
      </strong><br />
      <%= h(comment.body) %>
      <br />
      posted by: <%= h(comment.author) %>
    </p>
    <% end %>
  <% end %>
</div>

<%= form_for [@post, Comment.new] do |f| %>
  <p>
    <%= f.label :body, "New Comment" %><br />
    <%= f.text_area :body %><br />
    <%= f.label :body, "Author" %><br />
    <%= f.text_field :author %>
    
  </p>
  <p><%= f.submit "Add Comment" %>
  </p>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
